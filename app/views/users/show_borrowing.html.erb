<h1>show_borrowing</h1>

<div class="container">
  <div class="row">
    <div>
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </div>
    
      <div class="col-md-12">
      <p><%= link_to "新規アイテムを登録", new_item_path, class: "btn btn-primary user_btn1" %></p>
      <div>
        <p><%= link_to "現在掲載中のアイテムはこちら", current_user %></p>
      </div>
      <% if @borrowings.any? %>
        <h3>借りているアイテム (個数: <%= @borrowings.count(:borrowed_item_id) %>)</h3>


        <ol class="items">

<% @borrowings.each do | item | %>
<% if item.borrowed_item_id != nil %>
<% borrowing_item = Item.find(item.borrowed_item_id) %>
<p>
<% if borrowing_item.avatar? %>
  <div class="img-wrap">
    <%= image_tag borrowing_item.avatar.thumb.url %>
  </div>
<% end %>
</p>
<span class="title">タイトル: <%= link_to borrowing_item.title, item_path(borrowing_item.id) %></span></br>
<span class="title">有効期間: <%= borrowing_item.start_day %> 〜 <%= borrowing_item.end_day %></span></br>
<%= link_to "予約中", item_path(borrowing_item.id), class: "btn btn-large btn-primary" %>
<hr/>
<% else %>

<% end %>

        </ol>
      <% end %>
<% end %>
    </div>
  </div>
</div>
