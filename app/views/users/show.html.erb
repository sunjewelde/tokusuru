<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.items.any? %>
      <h3>アイテム (<%= @user.microposts.count %>)</h3>
      <ol class="items">
        <%= render @items %>
      </ol>
    <% end %>
  </div>
</div>