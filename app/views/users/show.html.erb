<div class="container">
  <div class="row">
    <div>
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </div>
    
    <%#= link_to "" , ownerships_path(asin: item.get('ASIN') , type: "Want") ,
                              :class => "want-#{item.get('ASIN')} btn-want btn btn-danger btn-sm wanted",
                              :remote => true,
                              :method => :delete %>
    
    <div class="col-md-12">
      <p><%= link_to "新規アイテムを登録", new_item_path, class: "btn btn-primary user_btn1" %></p>
       <div>
        <p><%= link_to "現在借りているアイテムはこちら", users_show_borrowing_path %></p>
      </div>
      <% if @user.items.any? %>
        <h3>掲載アイテム (個数: <%= @user.items.count %>)</h3>
        <ol class="items">
          <%= render @items %>
        </ol>
      <% end %>
    </div>
    


  </div>
</div>
