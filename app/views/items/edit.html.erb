


<% provide(:title, "Edit item") %>
<h1>アイテム情報編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
      <%#= image_tag(@item.avatar.thumb.url, class: "img-thumbnail") if @item.avatar %>
      <% if @item.avatar? %>
        <div class="thumbnail">
          <%= image_tag(@item.avatar.thumb.url) %>
        </div>
      <% else %>
        <div class="thumbnail">
          <%= image_tag("noimage.gif") %>
        </div>
      <% end %>
    </div>

      <%= f.label :タイトル %>
      <%= f.text_field :title %>

      <%= f.label :アイテムカテゴリー %>
      <%#= f.text_field :category %>
      <%= f.select :category, {"家電、カメラ、AV機器" => "c1",
                               "パソコン・オフィス用品" => "c2", 
                               "ホーム＆キッチン・ペット・DIY" => "c3", 
                               "ヘルス＆ビューティー" => "c4", 
                               "ベビー・おもちゃ・ホビー" => "c5", 
                               "ファッション・バッグ・腕時計" => "c6", 
                               "スポーツ＆アウトドア" => "c7", 
                               "車＆バイク・産業・研究開発" => "c8" } %>

      <%= f.label :アイテム利用可能開始日 %>
      <%= f.date_field :start_day %>

      <%= f.label :アイテム利用終了日 %>
      <%= f.date_field :end_day %>

      <%= f.label :アイテム紹介 %>
      <%= f.text_area :content %>
      
      <%= f.label :アイテム画像 %>
      <%= f.file_field :avatar %>
      
      <%#= form.file_field :avatars, multiple: true %>

      <%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
      <%= link_to "変更をキャンセル", current_user %>
    <% end %>
    
  </div>
</div>
