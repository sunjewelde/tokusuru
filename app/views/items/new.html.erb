<h1>新規アイテム登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :タイトル %>
      <%= f.text_field :title %>

      <%= f.label :アイテムカテゴリー %>
      <%= f.text_field :category %>

      <%= f.label :アイテム利用可能開始日 %>
      <%= f.date_field :start_day %>

      <%= f.label :アイテム利用終了日 %>
      <%= f.date_field :end_day %>

      <%= f.label :アイテム紹介 %>
      <%= f.text_area :content %>
      
      <%= f.label :アイテム画像 %>
      <%= f.file_field :avatars %>
      
      <%#= form.file_field :avatars, multiple: true %>

      <%= f.submit "アイテムを登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>