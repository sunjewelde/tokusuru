
<header class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container-fluid">

    <!-- スマートフォンサイズで表示されるメニューボタンとテキスト -->
    <div class="navbar-header">

      <!-- 

        メニューボタン 
        
        data-toggle : ボタンを押したときにNavbarを開かせるために必要
        data-target : 複数navbarを作成する場合、ボタンとナビを紐づけるために必要

      -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-menu-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <!-- タイトルなどのテキスト -->
      <a class="navbar-brand"><%= link_to "Tokusuru", root_path , id: "logo" %></a>

    </div>

    <!-- グローバルナビの中身 -->
    <div class="collapse navbar-collapse" id="nav-menu-1">
      
      <!-- 各ナビゲーションメニュー -->
      <ul class="nav navbar-nav">

        <!-- 通常のリンク -->
        <li class="active"><%= link_to "貸したい", items_path %></li>
        <li><%= link_to "借りたい", items_find_borrowing_path %></li>

        <!-- ドロップダウンのメニューも配置可能 -->
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">ランキング <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "貸したい", items_item_ranking_path %></li>
            <li class="divider"></li>
            <li><%= link_to "借りたい", items_item_borrower_ranking_path %></li>
          </ul>
        </li>
        
      </ul>
      
      <ul class="nav navbar-nav navbar-right user_right_margin1">
        <% if logged_in? %>
          <% #何も表示しない %>
          <% else %>
          <li><%= link_to "アカウント作成", signup_path %></li>
        <% end %>
        <% if logged_in? %>
          <!--<li><%#= link_to "ユーザー", '#' %></li>-->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "ユーザー情報", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>

    </div>
  </div>
</header>
<!--追加終了-->



