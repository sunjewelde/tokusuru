                        <div class="linkArea">
                            <div><%= link_to "貸したい", items_path, class: "user_bg_img1" %></div>
                        </div>
                </div>
                
                <div class="col-lg-6 col-sm-6 user_category_list img-responsive">
                    <h3>モノを探す</h3>
                    
                        <div class="linkArea">
                            <div><%= link_to "借りたい", items_find_borrowing_path, class: "user_bg_img2" %></div>
                        </div>
                </div>
            </div>
         </div>
         
        <div id="category">
